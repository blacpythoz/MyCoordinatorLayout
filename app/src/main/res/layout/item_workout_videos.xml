<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvItemWorkout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/ivWorkoutImage"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:elevation="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sample_1" />

        <View
            android:id="@+id/view"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginBottom="8dp"
            android:alpha="0.2"
            android:background="#1d1d1d"
            android:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Chest Exercise in 20 days"
            app:layout_constraintBottom_toBottomOf="@+id/ivWorkoutImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/ivWorkoutImage" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivWorkoutImage"
            app:layout_constraintEnd_toEndOf="@+id/ivWorkoutImage"
            app:layout_constraintStart_toStartOf="@+id/ivWorkoutImage"
            app:layout_constraintTop_toTopOf="@+id/ivWorkoutImage"
            app:srcCompat="@drawable/ic_play_button" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>